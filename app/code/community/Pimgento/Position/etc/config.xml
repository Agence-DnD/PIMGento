<config>
    <modules>
        <Pimgento_Position>
            <version>0.1.0</version>
        </Pimgento_Position>
    </modules>
    <global>
        <models>
            <pimgento_position>
                <class>Pimgento_Position_Model</class>
            </pimgento_position>
        </models>
        <helpers>
            <pimgento_position>
                <class>Pimgento_Position_Helper</class>
            </pimgento_position>
        </helpers>
        <events>
            <task_executor_load_task>
                <observers>
                    <pimgento_position_add_task>
                        <class>pimgento_position/observer</class>
                        <method>addTask</method>
                    </pimgento_position_add_task>
                </observers>
            </task_executor_load_task>
        </events>
    </global>
    <default>
        <pimdata>
            <position>
                <cron_enabled>0</cron_enabled>
                <cron_file>positions.csv</cron_file>
            </position>
        </pimdata>
    </default>
    <crontab>
        <jobs>
            <pimdata_position_cron>
                <run>
                    <model>pimgento_position/cron::run</model>
                </run>
            </pimdata_position_cron>
        </jobs>
    </crontab>
</config>