<config>
    <modules>
        <Pimgento_Image>
            <version>0.1.0</version>
        </Pimgento_Image>
    </modules>
    <global>
        <models>
            <pimgento_image>
                <class>Pimgento_Image_Model</class>
            </pimgento_image>
        </models>
        <helpers>
            <pimgento_image>
                <class>Pimgento_Image_Helper</class>
            </pimgento_image>
        </helpers>
        <events>
            <task_executor_load_task>
                <observers>
                    <pimgento_image_add_task>
                        <class>pimgento_image/observer</class>
                        <method>addTask</method>
                    </pimgento_image_add_task>
                </observers>
            </task_executor_load_task>
        </events>
    </global>
    <default>
        <pimdata>
            <image>
                <cron_enabled>0</cron_enabled>
                <delete>1</delete>
            </image>
        </pimdata>
    </default>
    <crontab>
        <jobs>
            <pimdata_image_cron>
                <run>
                    <model>pimgento_image/cron::run</model>
                </run>
            </pimdata_image_cron>
        </jobs>
    </crontab>
</config>