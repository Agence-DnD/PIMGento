<config>
    <tabs>
        <pimgento translate="label" module="pimgento_variantfamily">
            <label>Pimgento Extensions</label>
            <sort_order>100</sort_order>
        </pimgento>
    </tabs>
    <sections>
        <pimgento_variantfamily module="pimgento_variantfamily">
            <label>Pimgento Variant Family</label>
            <tab>pimgento</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <version translate="label">
                            <label>Extension Version</label>
                            <frontend_model>pimgento_variantfamily/adminhtml_system_config_version</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </version>
                    </fields>
                </general>
                <import_config translate="label">
                    <label>Import configurations</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <max_axes_number translate="label">
                            <label>Max Axes Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_axes_number>
                    </fields>
                </import_config>
            </groups>
        </pimgento_variantfamily>
        <pimdata>
            <groups>
                <variantfamily translate="label" module="pimgento_core">
                    <label>Variant Family</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>7</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <cron_enabled translate="label">
                            <label>Enable Cron</label>
                            <frontend_type>select</frontend_type>
                            <backend_model>pimgento_core/system_config_backend_pimgento_cron_status</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cron_enabled>
                        <cron_expression translate="label">
                            <label>Cron expression</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>pimgento_core/system_config_backend_pimgento_cron_expr</backend_model>
                            <comment>Exemple: 0 1 * * *</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <cron_enabled>1</cron_enabled>
                            </depends>
                        </cron_expression>
                        <cron_file translate="label">
                            <label>File</label>
                            <frontend_type>text</frontend_type>
                            <comment>File(s) name in /var/import/, files delimited by semicolon</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <cron_enabled>1</cron_enabled>
                            </depends>
                        </cron_file>
                    </fields>
                </variantfamily>
            </groups>
        </pimdata>
    </sections>
</config>
